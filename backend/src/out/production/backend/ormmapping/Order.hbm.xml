<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Order" table="`Order`" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="state" column="OrderStateID" class="OrderState" cascade="save-update,lock" unique="true" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="date" column="`Date`" type="date" not-null="false" lazy="false"/>
		<property name="address" column="Address" type="string" length="255" not-null="false" lazy="false"/>
		<property name="storePickUp" column="StorePickUp" type="boolean" length="1" not-null="true" lazy="false"/>
		<property name="total" column="Total" type="double" not-null="true" lazy="false"/>
		<set name="ORM_Items" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="OrderID" not-null="true"/>
			<one-to-many class="OrderItem"/>
		</set>
	</class>
</hibernate-mapping>
