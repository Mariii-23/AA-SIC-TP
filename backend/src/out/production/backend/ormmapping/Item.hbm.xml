<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Item" table="Item" lazy="false" discriminator-value="Item">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<discriminator column="Discriminator" type="string"/>
		<many-to-one name="product" cascade="lock" column="ProductID" class="Product" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<many-to-one name="material" cascade="lock" column="MaterialID" class="Material" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="quantity" column="Quantity" type="integer" length="10" not-null="true" lazy="false"/>
		<subclass name="OrderItem" discriminator-value="OrderItem" lazy="false">
			<property name="price" column="Price" type="double" not-null="false" lazy="false"/>
		</subclass>
	</class>
</hibernate-mapping>
