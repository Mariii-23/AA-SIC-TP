<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Product" table="Product" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="price" column="Price" type="double" not-null="true" lazy="false"/>
		<property name="name" column="Name" type="string" length="255" not-null="false" lazy="false"/>
		<property name="description" column="Description" type="string" length="255" not-null="false" lazy="false"/>
		<set name="ORM_Materials" table="Product_Material" lazy="true" cascade="save-update,lock">
			<key column="ProductID" not-null="true"/>
			<many-to-many column="MaterialID" class="Material">
			</many-to-many>
		</set>
		<set name="ORM_Infos" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="ProductID" not-null="true"/>
			<one-to-many class="TechnicalInfo"/>
		</set>
		<set name="ORM_Reviews" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="ProductID" not-null="true"/>
			<one-to-many class="Review"/>
		</set>
		<set name="ORM_Images" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="ProductID" not-null="true"/>
			<one-to-many class="Image"/>
		</set>
	</class>
</hibernate-mapping>
