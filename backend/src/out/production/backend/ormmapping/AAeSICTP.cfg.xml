<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/eaproject</property>
		<property name="connection.username">praticasaa</property>
		<property name="connection.password">praticasaa</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/Category.hbm.xml" />
		<mapping resource="ormmapping/Company.hbm.xml" />
		<mapping resource="ormmapping/Image.hbm.xml" />
		<mapping resource="ormmapping/Item.hbm.xml" />
		<mapping resource="ormmapping/Material.hbm.xml" />
		<mapping resource="ormmapping/Order.hbm.xml" />
		<mapping resource="ormmapping/OrderState.hbm.xml" />
		<mapping resource="ormmapping/Product.hbm.xml" />
		<mapping resource="ormmapping/Review.hbm.xml" />
		<mapping resource="ormmapping/ShoppingCart.hbm.xml" />
		<mapping resource="ormmapping/SocialNetwork.hbm.xml" />
		<mapping resource="ormmapping/TechnicalInfo.hbm.xml" />
		<mapping resource="ormmapping/User.hbm.xml" />
	</session-factory>
</hibernate-configuration>
