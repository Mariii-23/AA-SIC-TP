<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="User" table="`User`" lazy="false" discriminator-value="User">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<discriminator column="Discriminator" type="string"/>
		<property name="email" column="Email" type="string" length="255" not-null="false" lazy="false"/>
		<property name="password" column="Password" type="string" length="255" not-null="false" lazy="false"/>
		<property name="name" column="Name" type="string" length="255" not-null="false" lazy="false"/>
		<subclass name="Admin" discriminator-value="Admin" lazy="false">
		</subclass>
		<subclass name="_Costumer" discriminator-value="_Costumer" lazy="false">
			<many-to-one name="cart" column="ShoppingCartID" class="ShoppingCart" cascade="save-update,lock" unique="true" not-null="false" lazy="proxy" access="field">
			</many-to-one>
			<property name="birthday" column="Birthday" type="date" not-null="false" lazy="false"/>
			<property name="nif" column="Nif" type="string" length="255" not-null="false" lazy="false"/>
			<property name="address" column="Address" type="string" length="255" not-null="false" lazy="false"/>
			<set name="ORM_Orders" lazy="true" cascade="save-update,lock" inverse="false">
				<key column="UserID" not-null="true"/>
				<one-to-many class="Order"/>
			</set>
			<set name="ORM_Favorites" table="User_Product" lazy="true" cascade="save-update,lock">
				<key column="UserID" not-null="true"/>
				<many-to-many column="ProductID" class="Product">
				</many-to-many>
			</set>
		</subclass>
	</class>
</hibernate-mapping>
