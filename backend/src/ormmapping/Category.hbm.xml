<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Category" table="Category" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="name" column="Name" type="string" length="255" not-null="false" lazy="false"/>
		<property name="image" column="Image" type="string" length="255" not-null="false" lazy="false"/>
		<set name="ORM_SubCategories" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="CategoryID" not-null="true"/>
			<one-to-many class="Category"/>
		</set>
		<set name="ORM_Products" table="Category_Product" lazy="true" cascade="save-update,lock">
			<key column="CategoryID" not-null="true"/>
			<many-to-many column="ProductID" class="Product">
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>
